@@@@@@
import io;
class foo {
    public method bar(string s, numerical n, ... args) {
        io.print(args.length(), "\n");
    }
}

params = list();
params.add("string");
params.add(1);
params.add("foo");
params.add("bar");

f = foo();
f.bar(... params);
f.bar("str", 1, ... params);
f.bar("str", 1, "foo", ... params);
