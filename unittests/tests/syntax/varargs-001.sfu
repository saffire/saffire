syntax error, unexpected ',', expecting ')'
@@@@
import io;

class foo {
    public method bar(string s, numerical n, ... args) {
        io.print(args.length(), "\n");
    }
}

f = foo();
f.bar("str", 1);
f.bar("str", 1, "foo");
f.bar("str", 1, 1);
f.bar("str", 1, "foo", true);
f.bar("str", 1, null);
f.bar("str", 1, null, null, null);
