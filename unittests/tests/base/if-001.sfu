title: if/else control tests
author: Joshua Thijssen <joshua@saffire-lang.org>

**********
if (1) {
  $a = 1;
}

====
@@@@
if ($a = 5) {
  $a = 1;
}

====
Cannot use an assignment inside an if-statement
@@@@
if ($a == 5) {
  $a = 1;
}

====
@@@@
if ($a == 5 || $b == 1) {
  $a = 1;
}

====
@@@@
if ($a == 5 && $b == 1) {
  $a = 1;
}

====
@@@@
if ($a == 5 | 1) {
  $a = 1;
}

====
@@@@
if ("foo") {
  $a = 1;
}

====
@@@@
if (foo) {
  $a = 1;
}

====
@@@@
if ($foo) $a = 1;

====
@@@@
if ($foo) $a = 1; else {
  $b = 1;
}

====
@@@@
if ($foo) {
    $a = 1;
} else {
  $b = 1;
}

====
@@@@
if ($foo) {
} else if ($foo) {
} else ($foo);
====
@@@@
if ($foo) {
} elseif ($foo) {
} else ($foo);
